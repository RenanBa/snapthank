<div class="admin">
  <h2>Welcome Admin!</h2>
  <% if current_admin %>
     <%= link_to "Logout", admin_logout_path %>
  <% else %>
    <%= link_to "Login", admin_login_path %>
  <% end %>
</div>

<h3>Add a new member</h3>
 <form action='/members' method='post'>
    Name<input type="name" name="name" placeholder="name"></br></br>
    Email<input type="email" name="email" placeholder="email"></br></br>
    <input type="submit" value="ADD MEMBER">
</form>

<h3>Members List:</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>
  <% row = 1 %>
  <% @members.each do |member| %>
    <tr>
      <td class="row-info-<%= row %>"><%= member.name %></td>
      <td class="row-info-<%= row %>"><%= member.email %></td>
      <td class="row-info-<%= row %>"><%= link_to 'Edit', edit_member_path(member) %></td>
      <td class="row-info-<%= row %>"><%= link_to 'Destroy', member_path(member),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% if row == 1 %>
      <% row = 2 %>
    <% elsif row == 2%>
      <% row =1 %>
    <% end %>
  <% end %>
</table>
